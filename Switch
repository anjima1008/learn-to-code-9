//program written to display the weekdays

#include <stdio.h>

//Compiler version gcc  6.3.0

int main()
{
 int days;
 printf("Enter the days:\n");
 scanf("%d",&days);
 
 switch (days)
{
  case 2: 
    printf("Monday\n");
  break;
  case 1: 
    printf("Sunday\n");
  break;
  case 4: 
    printf("Wednesday\n");
  break;
  case 5:
     printf("Thursday\n");
  break;
  case 7:
     printf("Saturday\n");
  break ;
  case 3:
     printf("Tuesday\n");
  break;
  case 6:
    printf ("Friday\n");
  break;
  default:
     printf("Invalid input");
  break;
  

 }
 return 0;
}
